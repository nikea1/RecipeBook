<h1>Create Recipe Book</h1>

<form action = "/recipebook/create" method="POST">
	
	<label for="recipebook_name">Recipe Book Name:</label>
	<input id="recipebook_name" type="text" name="name"/>

	<label>Public or Private</label>
	<select id="private" name="private">
	  <option value="0">Public</option>
	  <option value="1">Private</option>
	</select>

	<input id="price" type="number" min="0.00" step="0.01" readonly=true name="price" value="0.00"/>

	<input type="submit" value="Submit" />
</form>

<script src="https://code.jquery.com/jquery-3.1.1.slim.js" integrity="sha256-5i/mQ300M779N2OVDrl16lbohwXNUdzL/R2aVUXyXWA=" crossorigin="anonymous"></script>
<script>
	$('#private').on("change", function(){

		if ($('#private').val() == false){
				$('#price').val('0.00').attr('readonly',true)
		}
		else{
				$('#price').val('').attr('readonly',false)
		}

	})
	
</script>