
<div style="background-color:rgba(255, 255, 255, 0.5)">
<h1>{{bookname}}</h1>
{{#each arrayOfSearchResults}}
	{{#if price}}
		{{#unless paid}}
			<h2>{{name}}</h2>
		{{/unless}}
		{{#if paid}}
			<a href="/recipe/{{id}}">
				<h2>{{name}}</h2>
			</a>
		{{/if}}
	{{/if}}
	{{#unless price}}
		<a href="/recipe/{{id}}">
			<h2>{{name}}</h2>
		</a>
	{{/unless}}
		<p>{{description}}</p>
		{{#unless paid}}
			{{#if price}}
				<form action="/payment" method="GET">
					<input type="hidden" name="recipe_id" value="{{id}}" />
					<input type="submit" value="{{price}}" />
				</form>
			{{/if}}
		{{/unless}}
		{{#if paid}}
			<p>Paid</p>
		{{/if}}
{{/each}}
{{#if usermatch}}
	<form class="form-inline text-center" action="/recipebook/{{recipeBookId}}/addRecipe" method="POST">
		<div class="form-group">
		<label>Add Recipe</label>
		<select class="form-control" name="recipeId">
			{{#each allrecipes}}
				<option value={{dataValues.id}}>{{dataValues.name}}</option>
			{{/each}}
		</select>
		<input class="form-control" type="submit" value="Add Recipe"/>
	</form>
{{/if}}
</div>