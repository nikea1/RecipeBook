
<div class="jumbotron">
	<div class="container">
		<h1 id="welcome">Welcome to Recipe Book!</h1>
		<div id="recipes-container">
			{{#each recipes_array}}
				{{#unless price}}
					<div class="recipe-display">
						<h3><a href="/recipe/{{dataValues.id}}">{{dataValues.name}}</a></h3>
						<p class="description">{{dataValues.description}}</p>
						<img class="img-responsive recipe-img" src="{{dataValues.image}}" alt="{{dataValues.name}}">
					</div>
				{{/unless}}
			{{/each}}
		</div>
	</div>
</div>