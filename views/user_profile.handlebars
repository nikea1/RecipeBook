{{#if user_id_match}}
<div id="services" class="container-fluid text-center">
  <h2>Have Fun and Cook</h2>
  <h4>What we offer</h4>
  <br>
  <div class="row slideanim">
    <div class="col-sm-4">
      <span  ></span>
      <button id="followers" data-action="followers"><h4>Followers</h4></button>
      <p>Check how is following you.</p>
    </div>
    <div class="col-sm-4">
      <span id="edit_profile" data-action="edit_profile"></span>
      <h4>Edit Profile</h4>
      <p>You can make all the changes that you want!.</p>
    </div>
    <div class="col-sm-4">
      <span id="add_recipe" data-action="add_recipe"></span>
      <h4>Add Recipe</h4>
      <p>You have the tools to right down your recipes.</p>
    </div>
  </div>
  <br><br>
  <div class="row slideanim">
    <div class="col-sm-4">
      <span id="add_recipebook" data-action="add_recipebook"></span>
      <h4>Add Recipe Book</h4>
      <p>All of your family cooking history in one click</p>
    </div>
    <div class="col-sm-4">
      <span id="paid_recipes" data-action="paid_recipes"></span>
      <h4>Paid Recipes</h4>
      <p>Check the recipies you have paid for.</p>
    </div>
    <div class="col-sm-4">
      <span id="favorite_recipes" data-action="favorite_recipes"></span>
      <h4 style="color:#303030;">Favorite Recipes</h4>
      <p>The recipes that you love right where they belong</p>
    </div>
    {{/if}}
  </div>
  {{#unless user_id_match}}
  {{#if following}}
  	<div class="col-sm-4">
      <span id="unfollow_form" action="" method="POST"></span>
      <h4>Unfollow</h4>
      <p>Unfollow them if you want to.</p>
    </div>
    {{/if}}
    {{#unless following}}

    <div class="col-sm-4">
      <span id="follow_form" action="" method="POST"></span>
      <h4>Follow</h4>
      <p>foollow them if you want to.</p>
    </div>
    {{/unless}}
    {{/unless}}

    <div class="col-sm-4">
      <span id="recipes" data-action="recipes"></span>
      <h4>Recipes</h4>
      <p>Check all recipes.</p>
    </div>

    <div class="col-sm-4">
      <span id="recipebooks" data-action="recipebook"></span>
      <h4>RecipeBooks</h4>
      <p>Check all recipes Books.</p>
    </div>

</div>


